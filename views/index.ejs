<!-- CTA -->
<section class="call-to-action container">
  <div class="cta-div row">
    <div class="cta-text col-md">
      <p class="cta-paragraph">
        Sign up for exclusive email offers, discounts, and updates on everything Hellovit.
      </p>
      <form method="POST" action="/subscribe">
        <div class="form-group">
          <input
            type="email"
            name="email"
            id="email"
            class="email form-control"
            placeholder="Enter Your Email"
          />
          <input
            type="submit"
            id="email-submit"
            class="btn email-btn"
            value="Submit"
          />
        </div>
      </form>
    </div>
  </div>
</section>
